generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String?
  createdAt DateTime @default(now())
}

generator client {
  provider = "prisma-client-js"
}


model Account {
  account_id    BigInt   @id @default(autoincrement()) // Primary Key
  employee_id   BigInt   @unique                     // Mỗi nhân viên chỉ có 1 tài khoản
  username      String   @unique @db.VarChar(50)     // Tên đăng nhập
  password_hash String   @db.VarChar(255)            // Password đã hash
  role_id       BigInt                                   // Quyền truy cập
  last_login    DateTime? @db.Timestamptz             // Thời gian đăng nhập cuối, nullable

  @@map("account") // đặt tên bảng nếu muốn giữ nguyên tên trong DB
}


model Employee {
  employee_id   BigInt   @id @map("employee_id")

  full_name     String   @db.VarChar(100)
  gender        String   @db.VarChar(10)
  date_of_birth DateTime @db.Date

  phone         String?  @db.VarChar(20)
  email         String?  @unique @db.VarChar(100)
  address       String?  @db.VarChar(255)

  store_id      BigInt
  position_id   BigInt

  hire_date     DateTime @db.Date
  status        String   @db.VarChar(20)

  avatar        String?  @db.VarChar(255)

  created_at    DateTime @default(now()) @db.Timestamptz
  updated_at    DateTime @default(now()) @db.Timestamptz

  // Quan hệ 1-1 với Account
  account       Account?

  @@map("employees")
}

model Role {
  role_id     BigInt  @id @map("role_id")
  role_name   String  @unique @db.VarChar(50)
  description String? @db.VarChar(255)

  // 1 Role - nhiều Account
  accounts    Account[]

  @@map("roles")
}

